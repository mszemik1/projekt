<Window x:Class="guiLotnisko.SzczegolyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:guiLotnisko"
        mc:Ignorable="d"
        Title="Lista pasażerów" Height="450" Width="1000">
    <Grid Background="#FFEDF3F7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        
        <ListBox x:Name="PasazerowieList" Grid.Row="2" Grid.Column="1" Grid.RowSpan="8" FontSize="14" Margin="10" Width="800" Height="350" Background="#FFD4E6F1" BorderBrush="#FF5D6D7E" Foreground="#FF374151" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="Tahoma"/>
        
        <Button Grid.Row="2" Grid.Column="2"   Grid.ColumnSpan="1" Content="Usuń pasażera" Click="UsunPasazeraButton_Click" Margin="10" />

        <Button Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Content="Dodaj pasażera" Click="DodajPasazeraButton_Click" Margin="10"/>


    </Grid>
</Window>
